<h1>Sign Up</h1>

<form action="/users" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <label>Email<br>
    <input name="user[username]" type="text"><br>
  </label><br>
  <label>First Name<br>
    <input name="user[first_name]" type="text"><br>
  </label><br>
  <label>Last Name<br>
    <input name="user[last_name]" type="text"><br>
  </label><br>
  <label>Password<br>
    <input name="user[password]" type="password"><br>
  </label><br>
  <input type="submit" value="Submit" class="btn btn-primary"><br>
</form>
<% unless logged_in? %>
<%= link_to "Already a User? Sign In here!", new_session_url%>
<% end %>